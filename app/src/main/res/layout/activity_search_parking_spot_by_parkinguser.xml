<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_parking_spot_by_parkinguser">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Search Parking Spot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Start Time :" />

        <SearchView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/search"
            android:queryHint="Start Time" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/ll2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll1"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/filter2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Parking Area Name :" />

    <SearchView
        android:id="@+id/search3"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:queryHint="Start Time" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Duration :" />

        <SearchView
            android:id="@+id/search4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:queryHint="Duration of Parking" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sort_black_24dp"
        android:layout_below="@id/ll3"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
            android:id="@+id/textView1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Parking Area Name: West Garage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Spot: #10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView3"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Type: Midrange"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:padding="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Area Name: Maverick"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView6"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Spot: #18"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView8"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Type: Basic"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll5"
        android:padding="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Area Name: Maverick"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Spot: #39"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView11"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Type: Basic"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll6"
        android:padding="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Area Name: Davis"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView12"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Spot: #67"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/textView13"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Parking Type: Basic"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <Button
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Log Out"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#78909C"/>

</RelativeLayout>